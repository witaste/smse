<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
    <package name="pages" namespace="/pages" extends="struts-default,json-default">
		<global-results>
			<result name="json" type="json" >  
                <param name="root">jsonObject</param>  
            </result> 
		</global-results>
		<action name="system!*" method="{1}" class="cn.zno.smse.action.SystemAction">
            <result name="initMain" type="dispatcher">/jsp/pages/main.jsp</result>
            <result name="initMenu" type="dispatcher">/jsp/pages/menu.jsp</result>
            <result name="crudMenu" type="dispatcher">/jsp/pages/menuCRUD.jsp</result>
        </action>
        <action name="person!*" method="{1}" class="cn.zno.smse.action.PersonAction">
            <result name="goAdd" type="dispatcher">/jsp/pages/person/personAdd.jsp</result>
            <result name="goDetail" type="dispatcher">/jsp/pages/person/personDetail.jsp</result>
            <result name="goEdit" type="dispatcher">/jsp/pages/person/personEdit.jsp</result>
            <result name="goList" type="dispatcher">/jsp/pages/person/personList.jsp</result>
        </action>

    </package>
</struts>
